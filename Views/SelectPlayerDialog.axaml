<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Projet_Chess_db.Views.SelectPlayerDialog"
        Title="Sélectionner un joueur"
        Width="450" Height="500"
        CanResize="False"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20" Spacing="15">
        
        <TextBlock Text="Inscrire un joueur" 
                   FontSize="20" 
                   FontWeight="Bold"/>

        <TextBlock Text="Sélectionnez un joueur dans la liste :"/>

        <!-- Liste des joueurs -->
        <ListBox x:Name="PlayerListBox"
                 Height="300"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding EloRating, StringFormat='ELO: {0}'}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Boutons -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Annuler" 
                    Width="100"
                    Click="Cancel"/>
            <Button Content="Sélectionner" 
                    Width="100"
                    Click="Select"/>
        </StackPanel>
    </StackPanel>
</Window>