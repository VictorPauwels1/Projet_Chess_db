<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Projet_Chess_db.Views.MainWindow"
        Title="Chess DB - Gestion Fédération"
        Width="1000" Height="700"
        WindowState="Maximized">

    <Grid ColumnDefinitions="150,*">
        
        
        <StackPanel Grid.Column="0" Background="#2C3E50" Spacing="10" Margin="10">
            <TextBlock Text="Chess DB" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       Margin="0,20,0,30"/>

            <Button Content="Joueurs" 
                    Click="ShowPlayers"
                    Background="Transparent"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="10"/>
            
            <Button Content="Compétitions" 
                    Click="ShowCompetitions"
                    Background="Transparent"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="10"/>
            
            <Button Content="Parties" 
                    Click="ShowGames"
                    Background="Transparent"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="10"/>

            <Button Content="Statistiques" 
                    Click="ShowStatistics"
                    Background="Transparent"
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Padding="10"/>
        </StackPanel>

       
        <Border Grid.Column="1" Margin="20">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </Grid>
</Window>