<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Projet_Chess_db.Views.EditPlayerDialog"
        Title="Modifier un joueur"
        Width="450" Height="550"
        CanResize="True"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            
            <TextBlock Text="Modifier le joueur" 
                       FontSize="20" 
                       FontWeight="Bold"/>

            <StackPanel>
                <TextBlock Text="Prénom *"/>
                <TextBox x:Name="TxtFirstName"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Nom *"/>
                <TextBox x:Name="TxtLastName"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Date de naissance *"/>
                <DatePicker x:Name="DateBirth"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Email"/>
                <TextBox x:Name="TxtEmail"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Téléphone"/>
                <TextBox x:Name="TxtPhone"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="ELO"/>
                <NumericUpDown x:Name="NumElo" 
                               Minimum="0" 
                               Maximum="3000"
                               Increment="10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Spacing="10" 
                        Margin="0,20,0,0">
                <Button Content="Annuler" 
                        Width="100"
                        Click="Cancel"/>
                <Button Content="Enregistrer" 
                        Width="100"
                        Click="Save"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>